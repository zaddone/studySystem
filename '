//package okzyw
package main
import(
	"fmt"
	"github.com/zaddone/studySystem/request"
	"io"
	"github.com/PuerkitoBio/goquery"
)
var (
	rootUrl string = "http://www.okzyw.com/"
)
func getList(page int,readPage func(uri string,datetime string )){
	err := request.ClientHttp(fmt.Sprintf("%s?m=vod-index-pg-%d.html",rootUrl,page),"GET",[]int{304,200},nil,func(body io.Reader)error{
		doc,err := goquery.NewDocumentFromReader(body)
		if err != nil {
			return err
		}
		doc.Find(".xing_vb li").EachWithBreak(func(i int,s *goquery.Selection)bool {
			val,_ := s.Find("span.xing_vb4 a").Attr("href")
			fmt.Println(val)
			return true
		})
		//s.RemoveFiltered("script")

		return nil
	})
	if err != nil {
		fmt.Println(err)
	}
}

func main(){
	err := request.ClientHttp(uri,"GET",[]int{304,200},nil,func(body io.Reader)error{
		doc,err := goquery.NewDocumentFromReader(body)
		if err != nil {
			return err
		}
		doc.Find(".xing_vb li").EachWithBreak(func(i int,s *goquery.Selection)bool {
			val,_ := s.Find("span.xing_vb4 a").Attr("href")
			fmt.Println(val)
			return true
		})
		//s.RemoveFiltered("script")

		return nil
	})
	if err != nil {
		fmt.Println(err)
	}
}

